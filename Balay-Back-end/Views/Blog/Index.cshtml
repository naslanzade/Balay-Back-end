@model BlogVM
@{
    ViewData["Title"] = "Index";
}

@section Css{
    <link rel="stylesheet" href="~/assets/scss/blog/blog.css">



}


<main>
    <section id="blogs">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <span class="heading">Blog</span>
                    <h2 class="title">Recent blog</h2>
                </div>


                @foreach (var item in Model.PaginatedDatas.Datas)
                {
                    <div class="col-lg-4 col-md-6 col-xs-12 col-sm-12">
                        <div class="blog mt-5">
                            <a href=""><img src="~/assets/images/@item.Image" alt=""></a>
                            <div class="desc">
                                <span>
                                    <small>April 14, 2018 </small> | <small> Web Design </small> | <small>
                                        <i class="fa-regular fa-comment"></i> 4
                                    </small>
                                </span>
                                <h3><a href="">@item.Heading</a></h3>
                                <p>
                                   @item.Title
                                </p>
                            </div>
                        </div>
                    </div>
                }

                <div class="col-md-12 mt-3">
                    <ul class="pagination">

                        @for (int i = 1; i <= Model.PaginatedDatas.TotalPage; i++)
                        {
                            <li @(Model.PaginatedDatas.CurrentPage == i ? "disabled && active" : "")><a asp-action="Index" asp-route-page="@i">@i</a></li>

                        }
                    </ul>
                </div>

            </div>
        </div>
    </section>

    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h2>Get in Touch!</h2>
                </div>

                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <p>
                        Separated they live in Bookmarksgrove right at the coast of the
                        Semantics, a large language ocean.
                    </p>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button><a href="">Contact me!</a></button>
                </div>

            </div>
        </div>
    </section>
</main>



@section Scripts {

    <script src="~/assets/js/blog/blog.js"></script>


}